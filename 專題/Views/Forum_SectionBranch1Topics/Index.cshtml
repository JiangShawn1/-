@model IEnumerable<專題.Models.EFModels.Forum_SectionBranch1Topics>

<p>
    @Html.ActionLink("發表文章", "Create")
</p>
<table class="table">
    <tr>
        <th>
           所屬討論版
        </th>
        <th>
           文章標題
        </th>
        <th>
            文章屬性
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ForumSectionBranch.branchName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Topic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.ActionLink("修改文章標題", "Edit", new { id=item.id }) |
            @Html.ActionLink("刪除文章", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
